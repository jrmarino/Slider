with "/usr/local/lib/gnat/adacurses.gpr";

project Slider is

   type Mode_Type is ("debug", "release");
   Mode : Mode_Type := external ("mode", "debug");

   for Main use ("slider.adb");
   
   package Compiler is
      case Mode is
         when "debug" =>
            for Switches ("Ada") use ("-gnaty", "-gnateE", "-g");
         when "release" =>
            for Switches ("Ada") use ("-O2");
      end case;
   end Compiler;

end Slider;
